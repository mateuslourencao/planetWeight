<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.first.planetweight.MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Informe a massa em KG"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/mercuryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mercúrio"
        app:layout_constraintLeft_toLeftOf="@id/editText"
        app:layout_constraintTop_toBottomOf="@id/editText" />

    <Button
        android:id="@+id/venusBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vênus"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@id/mercuryBtn"
        app:layout_constraintRight_toRightOf="@id/editText"
        app:layout_constraintTop_toBottomOf="@id/editText" />

    <Button
        android:id="@+id/earthBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terra"
        app:layout_constraintLeft_toLeftOf="@id/mercuryBtn"
        app:layout_constraintTop_toBottomOf="@id/mercuryBtn" />

    <Button
        android:id="@+id/marsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marte"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@id/earthBtn"
        app:layout_constraintRight_toRightOf="@id/venusBtn"
        app:layout_constraintTop_toBottomOf="@id/venusBtn" />

    <Button
        android:id="@+id/jupiterBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Júpiter"
        app:layout_constraintLeft_toLeftOf="@id/earthBtn"
        app:layout_constraintTop_toBottomOf="@id/earthBtn" />

    <Button
        android:id="@+id/saturnBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saturno"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@id/jupiterBtn"
        app:layout_constraintRight_toRightOf="@id/marsBtn"
        app:layout_constraintTop_toBottomOf="@id/marsBtn" />

    <Button
        android:id="@+id/uranusBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urano"
        app:layout_constraintLeft_toLeftOf="@id/jupiterBtn"
        app:layout_constraintTop_toBottomOf="@id/jupiterBtn" />

    <Button
        android:id="@+id/neptuneBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Netuno"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@id/uranusBtn"
        app:layout_constraintRight_toRightOf="@id/saturnBtn"
        app:layout_constraintTop_toBottomOf="@id/saturnBtn" />

    <Button
        android:id="@+id/plutoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plutão"
        app:layout_constraintLeft_toLeftOf="@id/uranusBtn"
        app:layout_constraintTop_toBottomOf="@id/uranusBtn" />

</android.support.constraint.ConstraintLayout>
